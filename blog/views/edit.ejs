<%- include("partials/header") %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= blog.title %></div>
  <form action="/blogs/<%= blog._id %>?method=PUT" method="POST` class="ui form">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" placeholder="image" value="<%= blog.image %>">
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea name="blog[body]" id="" cols="30" rows="10">
        <%= blog.body %>
      </textarea>
    </div>
    <input type="submit" value="submit" class="ui violet basic button big">
  </form>
</div>

<%- include("partials/footer") %>